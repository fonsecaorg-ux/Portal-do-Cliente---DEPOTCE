@model PortalCliente.Models.AlterarMinhaSenhaViewModel
@{
    ViewData["Title"] = "Alterar minha senha";
    var obrigatorio = ViewBag.AlterarSenhaObrigatorio as bool? ?? false;
}

@if (obrigatorio)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Senha temporária.</strong> Você deve alterar sua senha antes de continuar usando o portal.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<h1 class="display-6 mb-1">Alterar minha senha</h1>
<p class="text-muted mb-4">Informe a senha atual e a nova senha.</p>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AlterarMinhaSenha" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>

            <div class="mb-3">
                <label asp-for="SenhaAtual" class="form-label"></label>
                <input asp-for="SenhaAtual" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="SenhaAtual" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NovaSenha" class="form-label"></label>
                <input asp-for="NovaSenha" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NovaSenha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarSenha" class="form-label"></label>
                <input asp-for="ConfirmarSenha" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Alterar senha</button>
                @if (!obrigatorio)
                {
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

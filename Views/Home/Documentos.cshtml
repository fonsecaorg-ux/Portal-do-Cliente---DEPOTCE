@model List<PortalCliente.Models.Container>
@{
    ViewData["Title"] = "Laudos e Documentos";
    var busca = ViewBag.Busca as string ?? "";
    var ehAdmin = User.IsInRole("Admin");
}

<div class="mb-4">
    <h1 class="fw-bold mb-1" style="font-size:1.5rem">@(ehAdmin ? "Laudos e Documentos" : "Seus laudos e documentos")</h1>
    <p class="text-muted mb-0" style="font-size:0.85rem">
        @(ehAdmin ? "Documentos" : "Seus documentos") disponíveis por isotank (Laudo de Vistoria – EIR e Certificado de Lavagem). Quando o MBM disponibilizar, os links aparecerão aqui.
    </p>
</div>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="get" asp-action="Documentos" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label class="form-label mb-0 small">Código do isotank</label>
            <input type="text" name="busca" value="@busca" class="form-control form-control-sm" placeholder="Ex.: DHDU..." style="min-width:180px" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-sm btn-primary">Filtrar</button>
            @if (!string.IsNullOrWhiteSpace(busca))
            {
                <a asp-action="Documentos" class="btn btn-sm btn-outline-secondary">Limpar</a>
            }
        </div>
    </div>
</form>

<div class="card border shadow-sm">
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <p class="text-muted p-4 mb-0">@(ehAdmin ? "Nenhum isotank encontrado para exibir documentos." : "Nenhum dos seus isotanques com documentos disponíveis no momento.")</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Cliente</th>
                            <th>Laudo de Vistoria (EIR)</th>
                            <th>Certificado de Lavagem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Detalhe" asp-route-codigo="@c.Codigo">@c.Codigo</a>
                                </td>
                                <td>@c.Cliente</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(c.UrlLaudoVistoria))
                                    {
                                        <a href="@c.UrlLaudoVistoria" target="_blank" rel="noopener">Abrir / download</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">–</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(c.UrlCertificadoLavagem))
                                    {
                                        <a href="@c.UrlCertificadoLavagem" target="_blank" rel="noopener">Abrir / download</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">–</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<p class="text-muted small mt-3 mb-0">
    @if (Model != null && Model.Count > 0)
    {
        <span>@Model.Count isotank(s) listado(s). Clique no código para ver o detalhe da unidade.</span>
    }
</p>

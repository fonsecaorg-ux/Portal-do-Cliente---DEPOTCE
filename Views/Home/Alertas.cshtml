@using PortalCliente.Models
@{
    ViewData["Title"] = "Alertas";
    var ehAdmin = User.IsInRole("Admin");
    var parados = ViewBag.Parados as List<Container> ?? new List<Container>();
    var previsoes = ViewBag.Previsoes as List<Container> ?? new List<Container>();
    var ultimaAtualizacao = ViewBag.UltimaAtualizacao as DateTime? ?? DateTime.Now;

    string MotivoStatus(string status) => status switch
    {
        "Ag. Reparo"           => "Aguardando conclusão do reparo",
        "Ag. Off Hire"         => "Aguardando devolução ao armador",
        "Ag. Inspeção"         => "Aguardando inspeção técnica",
        "Ag. Limpeza"          => "Aguardando limpeza",
        "Ag. Envio Estimativa" => "Aguardando elaboração e envio de estimativa ao armador",
        _                      => status
    };
    string StatusBadge(string s) => s switch {
        "Ag. Off Hire"         => "bs-off-hire",
        "Ag. Envio Estimativa" => "bs-estimativa",
        "Ag. Limpeza"          => "bs-limpeza",
        "Ag. Reparo"           => "bs-reparo",
        "Ag. Inspeção"         => "bs-inspecao",
        _                      => "bg-secondary"
    };
    string DiasParadoBadge(int d) => d >= 15 ? "bd-alto" : d >= 8 ? "bd-medio" : "bd-ok";
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <h1 class="fw-bold mb-1" style="font-size:1.5rem">@(ehAdmin ? "Alertas" : "Seus alertas")</h1>
        <p class="text-muted mb-0" style="font-size:0.9rem">
            @(ehAdmin ? "Isotanks" : "Seus isotanques") parados (≥ 10 dias no status) e previsões de liberação nos próximos 3 dias — Atualizado em @ultimaAtualizacao.ToString("dd/MM/yyyy HH:mm")
        </p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">← Voltar à lista</a>
</div>

<!-- Cards de resumo -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);">
            <div class="card-body d-flex align-items-center">
                <div class="rounded-3 bg-danger bg-opacity-25 p-3 me-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/></svg>
                </div>
                <div>
                    <div class="fs-2 fw-bold text-danger">@parados.Count</div>
                    <div class="text-dark opacity-90 small">@(ehAdmin ? "Isotanks" : "Seus isotanques") parados ≥ 10 dias no status</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);">
            <div class="card-body d-flex align-items-center">
                <div class="rounded-3 bg-warning bg-opacity-50 p-3 me-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16"><path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/></svg>
                </div>
                <div>
                    <div class="fs-2 fw-bold text-dark">@previsoes.Count</div>
                    <div class="text-dark opacity-90 small">@(ehAdmin ? "Isotanks" : "Seus isotanques") com liberação prevista em até 3 dias</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Isotanks parados — ≥ 10 dias no status -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header rounded-0 text-white py-2" style="background: #B91C1C;">
        <div class="d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Isotanks parados — ≥ 10 dias no status</span>
            <span class="badge bg-light text-dark">@parados.Count unidades</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (parados.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Produto</th>
                            <th>Cliente</th>
                            <th>Status</th>
                            <th>Motivo</th>
                            <th>Dias parado</th>
                            <th class="text-end"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in parados)
                        {
                            var dias = c.DiasNoStatus ?? 0;
                            <tr>
                                <td><a asp-action="Detalhe" asp-route-codigo="@c.Codigo" class="text-primary text-decoration-none fw-medium">@c.Codigo</a></td>
                                <td>@c.Produto</td>
                                <td>@c.Cliente</td>
                                <td><span class="badge @StatusBadge(c.Status ?? "")">@c.Status</span></td>
                                <td class="text-muted" style="font-size:12px;">@MotivoStatus(c.Status ?? "")</td>
                                <td><span class="badge @DiasParadoBadge(dias)">@dias dias</span></td>
                                <td class="text-end"><a asp-action="Detalhe" asp-route-codigo="@c.Codigo" class="btn btn-sm btn-outline-primary">Ver →</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted p-3 mb-0">Nenhum isotank parado ≥ 10 dias no status.</p>
        }
    </div>
</div>

<!-- Previsão de liberação — até 3 dias -->
<div class="card border-0 shadow-sm">
    <div class="card-header rounded-0 text-white py-2" style="background: #D97706;">
        <div class="d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Previsão de liberação — até 3 dias</span>
            <span class="badge bg-light text-dark">@previsoes.Count unidades</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (previsoes.Any())
        {
            var hoje = DateTime.Today;
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Produto</th>
                            <th>Cliente</th>
                            <th>Status</th>
                            <th>Previsão</th>
                            <th>Dias restantes</th>
                            <th class="text-end"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in previsoes)
                        {
                            var prev = c.PrevisaoLiberacao?.Date ?? hoje;
                            var diasRest = (prev - hoje).Days;
                            var diasTexto = diasRest == 0 ? "Hoje" : diasRest == 1 ? "Amanhã" : diasRest + " dias";
                            <tr>
                                <td><a asp-action="Detalhe" asp-route-codigo="@c.Codigo" class="text-primary text-decoration-none fw-medium">@c.Codigo</a></td>
                                <td>@c.Produto</td>
                                <td>@c.Cliente</td>
                                <td><span class="badge @StatusBadge(c.Status ?? "")">@c.Status</span></td>
                                <td>@(c.PrevisaoLiberacao?.ToString("dd/MM/yyyy") ?? "–")</td>
                                <td><span class="@(diasRest <= 1 ? "text-warning fw-medium" : "text-success")">@diasTexto</span></td>
                                <td class="text-end"><a asp-action="Detalhe" asp-route-codigo="@c.Codigo" class="btn btn-sm btn-outline-primary">Ver →</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted p-3 mb-0">Nenhum isotank com previsão de liberação nos próximos 3 dias.</p>
        }
    </div>
</div>

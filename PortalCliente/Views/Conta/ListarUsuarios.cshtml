@model List<PortalCliente.Models.UsuarioAplicacao>
@{
    ViewData["Title"] = "Usuários";
    var desabilitados = ViewBag.Desabilitados as HashSet<string> ?? new HashSet<string>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6 mb-0">Usuários</h1>
    <a asp-action="CadastrarUsuario" class="btn btn-danger">+ Novo usuário</a>
</div>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Cliente vinculado</th>
                <th>Status</th>
                <th class="text-end" style="min-width: 220px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">Nenhum usuário cadastrado.</td>
                </tr>
            }
            else
            {
                @foreach (var u in Model)
                {
                    var desabilitado = desabilitados.Contains(u.Id);
                    <tr class="@(desabilitado ? "table-secondary" : "")">
                        <td>@u.NomeCompleto</td>
                        <td>@u.Email</td>
                        <td>
                            @if (!string.IsNullOrEmpty(u.ClienteNome))
                            {
                                <span class="badge bg-primary">@u.ClienteNome</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Admin</span>
                            }
                        </td>
                        <td>
                            @if (desabilitado)
                            {
                                <span class="badge bg-danger">Desabilitado</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="EditarUsuario" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-action="RedefinirSenha" asp-route-id="@u.Id" class="btn btn-sm btn-outline-secondary">Redefinir senha</a>
                            @if (desabilitado)
                            {
                                <form asp-action="ReativarUsuario" asp-route-id="@u.Id" method="post" class="d-inline" onsubmit="return confirm('Reativar este usuário?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-success">Reativar</button>
                                </form>
                            }
                            else
                            {
                                var ehEu = string.Equals(User.Identity?.Name, u.Email, StringComparison.OrdinalIgnoreCase);
                                if (!ehEu)
                                {
                                    <form asp-action="DesabilitarUsuario" asp-route-id="@u.Id" method="post" class="d-inline" onsubmit="return confirm('Desabilitar este usuário? Ele não poderá fazer login.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Desabilitar</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">(você)</span>
                                }
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
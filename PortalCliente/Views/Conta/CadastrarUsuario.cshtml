@model PortalCliente.Models.CadastroUsuarioViewModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
    var clientes = ViewBag.Clientes as List<string> ?? new List<string>();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="ListarUsuarios">Usuários</a></li>
        <li class="breadcrumb-item active">Novo usuário</li>
    </ol>
</nav>

<h1 class="display-6 mb-1">Cadastrar usuário</h1>
<p class="text-muted mb-4">Somente administradores da Depotce podem criar acessos.</p>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CadastrarUsuario" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>

            <div class="mb-3">
                <label asp-for="NomeCompleto" class="form-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarSenha" class="form-label"></label>
                <input asp-for="ConfirmarSenha" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select" id="selectRole">
                    <option value="Cliente">Cliente (acessa apenas seus isotanques)</option>
                    <option value="Admin">Admin (acessa todos os isotanques)</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="mb-3" id="divCliente">
                <label asp-for="ClienteNome" class="form-label"></label>
                <select asp-for="ClienteNome" class="form-select">
                    <option value="">— Selecione o cliente —</option>
                    @foreach (var c in clientes)
                    {
                        <option value="@c">@c</option>
                    }
                </select>
                <span asp-validation-for="ClienteNome" class="text-danger small"></span>
                <div class="form-text">O usuário verá apenas os isotanques desse cliente.</div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
                <a asp-action="ListarUsuarios" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const selectRole = document.getElementById('selectRole');
        const divCliente = document.getElementById('divCliente');

        function toggleCliente() {
            divCliente.style.display = selectRole.value === 'Cliente' ? '' : 'none';
        }

        selectRole.addEventListener('change', toggleCliente);
        toggleCliente();
    </script>
}
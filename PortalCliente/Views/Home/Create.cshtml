@model PortalCliente.Models.Container
@{
    ViewData["Title"] = "Novo container";
}

<h1 class="display-6">Novo container</h1>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Codigo" class="form-label"></label>
            <input asp-for="Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Produto" class="form-label"></label>
            <input asp-for="Produto" class="form-control" />
            <span asp-validation-for="Produto" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" placeholder="Ex: Em trânsito, Liberado" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PrevisaoLiberacao" class="form-label">Previsão de liberação</label>
            <input asp-for="PrevisaoLiberacao" type="date" class="form-control" />
            <span asp-validation-for="PrevisaoLiberacao" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
